{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "metadata": {
        "_generator": {
        "name": "bicep",
        "version": "0.17.1.54307",
        "templateHash": "1543618559284229187"
        }
    },
    "parameters": {
        "name": {
            "type": "string",
            "metadata": {
                "description": "The name of the container app."
            }
        },
        "containerImage": {
            "type": "string",
            "defaultValue": "community.opengroup.org:5555/osdu/platform/domain-data-mgmt-services/rock-and-fluid-sample/rafs-ddms-services/rafs-ddms-services-v0-27-1:1630990d6bd460e8a8ed25be69778512346e9f10",
            "metadata": {
                "description": "The container image to use. See OSDU Forum RAFS repository for available images."
            }
        },
        "osduEndpoint": {
            "type": "string",
            "defaultValue": "https://<your-osdu-endpoint>.energy.azure.com/",
            "metadata": {
                "description": "The OSDU endpoint to connect to. IMPORTANT: Keep the trailing slash."
            }
        },
        "dataPartitionId": {
            "type": "string",
            "defaultValue": "opendes",
            "metadata": {
                "description": "The data partition ID to use."
            }
        },
        "loggingLevel": {
            "type": "string",
            "defaultValue": "10",
            "allowedValues": [
                "10",
                "20"
            ],
            "metadata": {
                "description": "The logging level to use. 10 for debug, 20 for info."
            }
        },
        "redisCacheEnable": {
            "type": "bool",
            "defaultValue": false,
            "metadata": {
                "description": "Enable Redis cache for the service."
            }
        }
    },
    "resources": [
        {
            "apiVersion": "2024-02-02-preview",
            "name": "[parameters('name')]",
            "type": "Microsoft.App/containerapps",
            "location": "[resourceGroup().location]",
            "dependsOn": ["[resourceId('Microsoft.App/managedEnvironments', concat(parameters('name'),'-env'))]"],
            "properties": {
                "environmentId": "[resourceId('Microsoft.App/managedEnvironments', concat(parameters('name'),'-env'))]",
                "configuration": {
                    "activeRevisionsMode": "Single",
                    "ingress": {
                        "external": true,
                        "targetPort": 80,
                        "transport": "Auto"
                    }
                },
                "template": {
                    "containers": [
                        {
                            "name": "rafs",
                            "image": "[parameters('containerImage')]",
                            "resources": {
                                "cpu": "2",
                                "memory": "4Gi"
                            },
                            "env": [
                                {
                                    "name": "SERVICE_NAME",
                                    "value": "rafs-ddms"
                                },
                                {
                                    "name": "REDIS_HOSTNAME",
                                    "condition": "[parameters('redisCacheEnable')]",
                                    "value": "[reference(concat(parameters('name'), '-redis'), '2024-03-01').hostName]"
                                },
                                {
                                    "name": "REDIS_PASSWORD",
                                    "condition": "[parameters('redisCacheEnable')]",
                                    "value": "[reference(concat(parameters('name'), '-redis'), '2024-03-01').accessKeys.primaryKey]",
                                    "secureValue": true
                                }
                            ]
                        }
                    ]
                }
            }
        },
        {
            "apiVersion": "2024-03-01",
            "name": "[concat(parameters('name'),'-env')]",
            "type": "Microsoft.App/managedEnvironments",
            "location": "[resourceGroup().location]",
            "properties": {
                "zoneRedundant": false,
                "workloadProfiles": {
                    "workloadProfileType": "Consumption",
                    "name": "Consumption"
                }
            }
        },
        {
            "apiVersion": "2023-08-01",
            "condition": "[parameters('redisCacheEnable')]",
            "name": "[concat(parameters('name'), '-redis')]",
            "type": "Microsoft.Cache/Redis",
            "location": "[resourceGroup().location]",
            "properties": {
                "sku": {
                    "name": "Standard",
                    "family": "C",
                    "capacity": 3
                },
                "enableNonSslPort": false,
                "redisConfiguration": {
                    "aad-enabled": "true"
                },
                "redisVersion": "6",
                "disableAccessKeyAuthentication": false
            }
        }
    ]
}