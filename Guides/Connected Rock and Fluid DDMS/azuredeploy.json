{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "metadata": {
        "_generator": {
        "name": "bicep",
        "version": "0.17.1.54307",
        "templateHash": "1543618559284229187"
        }
    },
    "parameters": {
        "name": {
            "type": "string",
            "metadata": {
                "description": "The name of the container app."
            }
        },
        "containerImage": {
            "type": "string",
            "defaultValue": "community.opengroup.org:5555/osdu/platform/domain-data-mgmt-services/rock-and-fluid-sample/rafs-ddms-services/rafs-ddms-services-v0-27-1:1630990d6bd460e8a8ed25be69778512346e9f10",
            "metadata": {
                "description": "The container image to use. See OSDU Forum RAFS repository for available images."
            }
        },
        "osduEndpoint": {
            "type": "string",
            "defaultValue": "https://<your-osdu-endpoint>.energy.azure.com/",
            "metadata": {
                "description": "The OSDU endpoint to connect to. IMPORTANT: Keep the trailing slash."
            }
        },
        "dataPartitionId": {
            "type": "string",
            "defaultValue": "opendes",
            "metadata": {
                "description": "The data partition ID to use."
            }
        },
        "loggingLevel": {
            "type": "string",
            "defaultValue": "10",
            "allowedValues": [
                "10",
                "20"
            ],
            "metadata": {
                "description": "The logging level to use. 10 for debug, 20 for info."
            }
        },
        "redisCacheEnable": {
            "type": "bool",
            "defaultValue": false,
            "metadata": {
                "description": "Enable Redis cache for the service."
            }
        }
    },
    "resources": [
        {
            "apiVersion": "2023-11-02-preview",
            "name": "[parameters('name')]",
            "type": "Microsoft.App/containerapps",
            "kind": "containerapps",
            "location": "[resourceGroup().location]",
            "dependsOn": ["[resourceId('Microsoft.App/managedEnvironments', concat(parameters('name'),'-env'))]"],
            "properties": {
                "environmentId": "[resourceId('Microsoft.App/managedEnvironments', concat(parameters('name'),'-env'))]",
                "configuration": {
                    "activeRevisionsMode": "Single",
                    "ingress": {
                        "value": {
                            "external": true,
                            "transport": "Auto",
                            "targetPort": 8080,
                            "allowInsecure": false
                        }
                    }
                },
                "template": {
                    "containers": [{
                        "value": [
                            {
                                "name": "[concat(parameters('name'), '-container')]",
                                "image": "[parameters('containerImage')]",
                                "resources": {
                                    "cpu": "2",
                                    "memory": "4Gi"
                                },
                                "env": [
                                    {
                                        "name": "SERVICE_NAME",
                                        "value": "rafs-ddms"
                                    },
                                    {
                                        "name": "DDMS_ID",
                                        "value": "rafs"
                                    },
                                    {
                                        "name": "OPENAPI_PREFIX",
                                        "value": "/api/rafs-ddms"
                                    },
                                    {
                                        "name": "URL_PREFIX",
                                        "value": "api/rafs-ddms"
                                    },
                                    {
                                        "name": "CLOUD_PROVIDER",
                                        "value": "azure"
                                    },
                                    {
                                        "name": "SERVICE_HOST_STORAGE",
                                        "value": "[concat(parameters('osduEndpoint'), 'api/storage/v2')]"
                                    },
                                    {
                                        "name": "SERVICE_HOST_SCHEMA",
                                        "value": "[concat(parameters('osduEndpoint'), 'api/schema-service/v1')]"
                                    },
                                    {
                                        "name": "SERVICE_HOST_PARTITION",
                                        "value": "[concat(parameters('osduEndpoint'), 'api/partition/v1')]"
                                    },
                                    {
                                        "name": "SERVICE_HOST_DATASET",
                                        "value": "[concat(parameters('osduEndpoint'), 'api/dataset/v1')]"
                                    },
                                    {
                                        "name": "SERVICE_HOST_LEGAL",
                                        "value": "[concat(parameters('osduEndpoint'), 'api/legal/v1')]"
                                    },
                                    {
                                        "name": "SERVICE_HOST_SEARCH",
                                        "value": "[concat(parameters('osduEndpoint'), 'api/search/v2')]"
                                    },
                                    {
                                        "name": "REQUEST_TIMEOUT",
                                        "value": "180"
                                    },
                                    {
                                        "name": "SERVICE_READINESS_URLS",
                                        "value": "[concat(parameters('osduEndpoint'), 'api/storage/v2/liveness_check', ',', parameters('osduEndpoint'), 'api/schema-service/v1/liveness_check')]"
                                    },
                                    {
                                        "name": "CACHE_ENABLE",
                                        "value": "[parameters('redisCacheEnable')]"
                                    },
                                    {
                                        "condition": "[parameters('redisCacheEnable')]",
                                        "name": "REDIS_HOSTNAME",
                                        "value": "[reference(concat(parameters('name'), '-redis'), '2023-08-01').hostName]"
                                    },
                                    {
                                        "condition": "[parameters('redisCacheEnable')]",
                                        "name": "REDIS_PASSWORD",
                                        "value": "[reference(concat(parameters('name'), '-redis'), '2023-08-01').accessKeys.primaryKey]",
                                        "secureValue": true
                                    },
                                    {
                                        "condition": "[parameters('redisCacheEnable')]",
                                        "name": "REDIS_PORT",
                                        "value": "6380"
                                    },
                                    {
                                        "condition": "[parameters('redisCacheEnable')]",
                                        "name": "REDIS_DATABASE",
                                        "value": "0"
                                    },
                                    {
                                        "condition": "[parameters('redisCacheEnable')]",
                                        "name": "REDIS_SSL",
                                        "value": "true"
                                    },
                                    {
                                        "name": "PARTITION",
                                        "value": "[parameters('dataPartitionId')]"
                                    },
                                    {
                                        "name": "LOGGING_LEVEL",
                                        "value": "[parameters('loggingLevel')]"
                                    },
                                    {
                                        "name": "PYTHONUNBUFFERED",
                                        "value": "1"
                                    }

                                ]
                            }
                        ]
                    }],
                    "scale": {
                        "minReplicas": 1,
                        "maxReplicas": 3
                    }
                },
                "workloadProfileName": "Consumption"
            }
        },
        {
            "apiVersion": "2023-11-02-preview",
            "name": "[concat(parameters('name'),'-env')]",
            "type": "Microsoft.App/managedEnvironments",
            "location": "[resourceGroup().location]",
            "properties": {
                "zoneRedundant": false,
                "workloadProfiles": [{
                    "workloadProfileType": "Consumption",
                    "name": "Consumption"
                }]
            }
        },
        {
            "apiVersion": "2023-08-01",
            "condition": "[parameters('redisCacheEnable')]",
            "name": "[concat(parameters('name'), '-redis')]",
            "type": "Microsoft.Cache/Redis",
            "location": "[resourceGroup().location]",
            "properties": {
                "sku": {
                    "name": "Standard",
                    "family": "C",
                    "capacity": 3
                },
                "enableNonSslPort": false,
                "redisConfiguration": {
                    "aad-enabled": "true"
                },
                "redisVersion": "6",
                "disableAccessKeyAuthentication": false
            }
        }
    ]
}